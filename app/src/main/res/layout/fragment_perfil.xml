<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con foto de perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/image_perfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_background"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="Foto de perfil"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar foto"
                android:textColor="@color/primaryDark"
                android:textSize="12sp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/text_nombre_completo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Paciente"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primaryDark"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email@ejemplo.com"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Información Personal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información Personal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryDark"
                    android:layout_marginBottom="12dp" />

                <!-- Fecha de Nacimiento -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fecha de Nacimiento:"
                        android:textStyle="bold"
                        android:textColor="@color/textDark" />

                    <TextView
                        android:id="@+id/text_fecha_nacimiento"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="01/01/1990"
                        android:textColor="@color/textSecondary" />

                </LinearLayout>

                <!-- Género -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Género:"
                        android:textStyle="bold"
                        android:textColor="@color/textDark" />

                    <TextView
                        android:id="@+id/text_genero"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No especificado"
                        android:textColor="@color/textSecondary" />

                </LinearLayout>

                <!-- Teléfono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Teléfono:"
                        android:textStyle="bold"
                        android:textColor="@color/textDark" />

                    <TextView
                        android:id="@+id/text_telefono"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No especificado"
                        android:textColor="@color/textSecondary" />

                </LinearLayout>

                <!-- Dirección -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dirección:"
                        android:textStyle="bold"
                        android:textColor="@color/textDark"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/text_direccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No especificada"
                        android:textColor="@color/textSecondary" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Información Médica -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información Médica"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryDark"
                    android:layout_marginBottom="12dp" />

                <!-- Tipo de Sangre -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tipo de Sangre:"
                        android:textStyle="bold"
                        android:textColor="@color/textDark" />

                    <TextView
                        android:id="@+id/text_tipo_sangre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No especificado"
                        android:textColor="@color/textSecondary" />

                </LinearLayout>

                <!-- Alergias -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alergias:"
                        android:textStyle="bold"
                        android:textColor="@color/textDark"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/text_alergias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ninguna registrada"
                        android:textColor="@color/textSecondary" />

                </LinearLayout>

                <!-- Condiciones Médicas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Condiciones Médicas:"
                        android:textStyle="bold"
                        android:textColor="@color/textDark"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/text_condiciones_medicas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ninguna registrada"
                        android:textColor="@color/textSecondary" />

                </LinearLayout>

                <!-- Medicamentos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medicamentos Actuales:"
                        android:textStyle="bold"
                        android:textColor="@color/textDark"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/text_medicamentos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ninguno registrado"
                        android:textColor="@color/textSecondary" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_editar_perfil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Editar Perfil"
                android:layout_marginEnd="8dp"
                style="?attr/materialButtonOutlinedStyle" />

            <Button
                android:id="@+id/btn_exportar_datos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exportar Datos"
                android:layout_marginStart="8dp"
                style="?attr/materialButtonOutlinedStyle" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>