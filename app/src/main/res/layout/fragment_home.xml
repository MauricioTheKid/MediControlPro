<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium"
    android:background="@color/backgroundLight"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_medium"
        android:src="@drawable/ic_menu_camera"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/primaryDarkBlue"
        android:layout_marginBottom="@dimen/margin_small"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subtitulo_bienvenida"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/textDark"
        android:layout_marginBottom="@dimen/margin_large" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Características Principales:"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="@color/primaryBlue"
                android:layout_marginBottom="@dimen/margin_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Gestión de citas médicas"
                android:textSize="@dimen/text_size_small"
                android:layout_marginBottom="@dimen/margin_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Expediente médico digital"
                android:textSize="@dimen/text_size_small"
                android:layout_marginBottom="@dimen/margin_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Directorio de doctores"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>