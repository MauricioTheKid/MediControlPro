<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBlue"
    android:padding="40dp">

    <!-- Usa el logo que SÍ existe -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/logo_medicontrol_tech"
        android:layout_centerInParent="true"
        android:contentDescription="MediControlPro - Sistema de Gestión Médica Integral" />

    <!-- Nombre de la App - Blanco sobre azul -->
    <TextView
        android:id="@+id/text_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MediControlPro"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:shadowColor="#80000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6" />

    <!-- Eslogan Profesional -->
    <TextView
        android:id="@+id/text_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excelencia en Gestión Médica"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:alpha="0.95"
        android:fontFamily="sans-serif"
        android:layout_below="@id/text_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Progress Bar Blanca Elegante -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="180dp"
        android:layout_height="8dp"
        android:indeterminateTint="@color/white"
        android:progressBackgroundTint="#80FFFFFF"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <!-- Texto de Carga -->
    <TextView
        android:id="@+id/text_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargando sistema médico..."
        android:textColor="#E0FFFFFF"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_above="@id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>