<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Información de la cita -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Juan Pérez"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textDark"/>

            <TextView
                android:id="@+id/text_especialidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cardiología"
                android:textColor="@color/textDark"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/text_fecha_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2025-08-31 - 03:16"
                android:textColor="@color/textDark"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/text_motivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apendicitas"
                android:textColor="@color/textDark"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Estado y botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <!-- Estado -->
            <TextView
                android:id="@+id/text_estado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pendiente"
                android:textStyle="bold"
                android:drawablePadding="4dp"
                android:gravity="start"
                android:textSize="14sp"/>

            <!-- Botones de Acción -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Botón Editar -->
                <ImageButton
                    android:id="@+id/btn_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_edit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Editar cita"
                    android:tint="@color/textDark"/>

                <!-- Botón Eliminar -->
                <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_delete"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Eliminar cita"
                    android:layout_marginStart="8dp"
                    android:tint="@color/textDark"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>